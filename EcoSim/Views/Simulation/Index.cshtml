@model IEnumerable<BusinessLogic.Models.IndexSimulation>

<h2>
    Simulation Index
</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            # Nodes
        </th>
        <th>
            # Links
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductionCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NeedCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IterationsDone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NodeCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NeedCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IterationsDone)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                &nbsp;&nbsp;/&nbsp;&nbsp;
                <a href="/Simulation/Visualize/@item.Id" target="_">View Network</a>
            </td>
        </tr>
    }

</table>
